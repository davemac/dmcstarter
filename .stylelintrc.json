{
	"extends": [
		"/usr/local/lib/node_modules/stylelint-config-wordpress/scss"
	],
	"rules": {
		"no-descending-specificity": null,
		"function-parentheses-space-inside": "never",
		"rule-empty-line-before": [
			"always",
			{
				"ignore": [
					"first-nested"
				]
			}
		],
		"at-rule-empty-line-before": [
			"always",
			{
				"except": [
					"first-nested"
				]
			}
		],
		"string-quotes": "single",
			"max-line-length": [
				80,
				{
					"ignore": [
						"comments"
					],
					"ignorePattern": [
						"/^@import\\s+/"
					]
				}
			]
	}
}